# Server
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development
MOCK_MODE=true

# Database
DATABASE_URL=postgresql+asyncpg://skyie_studio:skyie_studio@localhost:5432/skyie_studio
DATABASE_URL_SYNC=postgresql://skyie_studio:skyie_studio@localhost:5432/skyie_studio

# Docker Compose (used by compose file)
POSTGRES_USER=skyie_studio
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=skyie_studio

# GPU Local
CUDA_VISIBLE_DEVICES=0
MODEL_BASE_PATH=/workspace/models
VRAM_LIMIT_GB=23

# GPU Inference Server (RunPod)
GPU_SERVER_URL=
GPU_API_KEY=
GPU_TIMEOUT_SECONDS=600
GPU_UPLOAD_TIMEOUT=120
GPU_MAX_RETRIES=2
HF_API_KEY=

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Storage
ASSETS_PATH=./assets
TEMP_PATH=./temp
OUTPUT_PATH=./assets/generated

# JWT Auth
JWT_SECRET_KEY=change-this-in-production-to-random-64-char-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Billing
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# LLM (Prompt Enhancement)
OPENAI_API_KEY=
LLM_MODEL=gpt-4o-mini

# Cloudflare R2
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=skyie-studio
R2_ENDPOINT=
